<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MisPrimerosAuxilitos" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>


    <!--  SplashScreen-->
    <style name="splashScreen" parent="Theme.SplashScreen">

        <item name="windowSplashScreenBackground">@color/mi_color_indigo</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/logo</item>
        <item name="windowSplashScreenAnimationDuration">1200</item>
        <item name="android:windowSplashScreenBrandingImage" tools:ignore="NewApi">@drawable/titulos3</item>
        <item name="postSplashScreenTheme">@style/Theme.MisPrimerosAuxilitos</item>
        <item name="android:fontFamily">@font/dynapuff</item>

    </style>

</resources>